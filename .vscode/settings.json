{
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "eslint.run": "onSave",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "files.watcherExclude": {
    "**/public/**": true,
    "**/.cache/**": true,
    "**/src/themes/**": true
  },
}